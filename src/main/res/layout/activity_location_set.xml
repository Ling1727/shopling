<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/ivLocationSetBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/back_black"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="新建收货地址"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlSet1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rlSet0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/ed0"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:hint="请填写收货人姓名"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlSet2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rlSet1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/ed1"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="请填写收货人手机号"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlSet3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rlSet2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/ed2"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="省市区县、乡镇等"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlSet4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/rlSet3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/ed3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="街道、楼牌号等"
                    android:inputType="textPostalAddress"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlSet5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rlSet4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设为默认地址"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <com.example.shopling.view.SelectView
                    android:id="@+id/selectView"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:layout_below="@+id/rlSet5"/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btSave"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="保存"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circular_four_red_30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white" />
</RelativeLayout>
