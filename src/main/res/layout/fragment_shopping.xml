<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="加载异常...下拉刷新"
        android:textSize="15sp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivShopPoint"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/point_three"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/tvShopSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="编辑"
                android:layout_toLeftOf="@id/ivShopPoint"
                android:layout_marginRight="20dp"
                android:textSize="17sp"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </RelativeLayout>

    <com.github.nuptboyzhb.lib.SuperSwipeRefreshLayout
        android:id="@+id/ssrlShop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlShop1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/rlShopLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true">
                        <Button
                            android:id="@+id/btShopLogin"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="登录"
                            android:background="@drawable/circular_four_brim_20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="登录同步电脑与手机购物车中的商品"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/btShopLogin"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_below="@+id/rlShopLogin">

                    <RelativeLayout
                        android:id="@+id/rlShop0"
                        android:layout_width="match_parent"
                        android:layout_height="145dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_centerHorizontal="true">
                            <ImageView
                                android:id="@+id/ivShoppingCar"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/shopping_car_gray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:gravity="center"
                                android:text="购物车是空的"
                                android:layout_toRightOf="@+id/ivShoppingCar"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="100dp"
                            android:layout_centerHorizontal="true">
                            <Button
                                android:id="@+id/bt0"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:text="逛逛秒杀"
                                android:background="@drawable/circular_four_brim_20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dp"
                                />

                            <Button
                                android:id="@+id/bt1"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:text="看看关注"
                                android:background="@drawable/circular_four_brim_20dp"
                                android:layout_toRightOf="@+id/bt0"
                                android:layout_marginLeft="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="3dp"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvShopcar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTuiJian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlShop">
                    <TextView
                        android:id="@+id/tvShop"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="为你推荐"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvshop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvShop"/>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </com.github.nuptboyzhb.lib.SuperSwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/rlShop2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="invisible">

        <CheckBox
            android:id="@+id/cbAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/check_box_style"
            android:text=" 全选" />
        <TextView
            android:id="@+id/tvAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="合计：¥0.0"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/btSettlement"
            android:layout_toRightOf="@+id/cbAll"
            android:paddingLeft="20dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btSettlement"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/red"
            android:text="去结算"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color1"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlDelete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="invisible">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color1"
            android:layout_above="@+id/cbAll1"/>
        <CheckBox
            android:id="@+id/cbAll1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/check_box_style"
            android:text=" 全选" />
        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="删除"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/circular_four_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color1"
            android:layout_below="@+id/cbAll1"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pbShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>
