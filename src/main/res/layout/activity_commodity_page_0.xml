<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/svCommodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rlCommodity"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                 />
            <RelativeLayout
                android:layout_marginTop="400dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tvCommodityMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥129.00"
                    android:textColor="@color/red"
                    android:textSize="22sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCommodityIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/tvCommodityMoney"
                    android:layout_marginTop="30dp"
                    android:text="欧时纳（JUST STAR）女士包包时尚简约单肩斜挎包韩版百搭手提凯莉包 可爱猫咪挂饰 043萌趣蓝"
                    android:textSize="18sp"/>
                <View
                    android:id="@+id/viewCommodity1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_below="@+id/tvCommodityIntro"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlCommodity1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewCommodity1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="白条"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_centerVertical="true"
                        android:text="激活白条立减50元(点此激活)"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewCommodity2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_below="@+id/viewCommodity1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlCommodity2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewCommodity2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="促销"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_centerVertical="true"
                        android:text="祝福手提袋(赠完即止)"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewCommodity3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color1"
                    android:layout_below="@+id/viewCommodity2"
                    android:layout_marginTop="50dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlCommodity3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewCommodity3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_centerVertical="true"
                        android:text="看看就算了(还想改么)"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewCommodity4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color1"
                    android:layout_below="@+id/viewCommodity3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlCommodity4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/viewCommodity4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送至"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_centerVertical="true"
                        android:text="默认地址...."
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewCommodity5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/color1"
                    android:layout_below="@+id/viewCommodity4"
                    android:layout_marginTop="50dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
