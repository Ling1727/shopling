<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v4.view.ViewPager
        android:id="@+id/vpCommodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/rlCommodityToolBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp">
        <!--android:background="@color/white"-->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_four_alpha"
            android:padding="9dp"
            android:src="@drawable/back_white"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/ivSan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_four_alpha"
            android:padding="9dp"
            android:src="@drawable/point_three_three"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tvCommodity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                />
            <View
                android:id="@+id/viewCommodity11"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_below="@+id/tvCommodity1"
                android:background="@color/red"/>
            <TextView
                android:id="@+id/tvCommodity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvCommodity1"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/color3"
                />
            <View
                android:id="@+id/viewCommodity12"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_below="@+id/tvCommodity2"
                android:layout_toRightOf="@id/viewCommodity11"
                android:layout_marginLeft="20dp"
                android:background="@color/red"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/llCommodity">
            <RelativeLayout
                android:id="@+id/rl000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/information"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="联系客服"
                    android:layout_marginTop="40dp"
                    android:textSize="11sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl001"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/information"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="店铺"
                    android:layout_marginTop="40dp"
                    android:textSize="11sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl002"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/shopping_car_un"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="购物车"
                    android:layout_marginTop="40dp"
                    android:textSize="11sp"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCommodity"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tvShopCar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="加入购物车"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color2"
                android:text="立即购买"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
