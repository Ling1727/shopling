<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">
    <RelativeLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/back_black"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="填写订单"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击刷新"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <ScrollView
        android:id="@+id/svOrderForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlToolBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/rlOne0"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="点击添加地址"
                android:textSize="18sp"/>
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlOne"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCellPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678910"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/tvName"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvName"
                    android:layout_marginLeft="10dp"
                    android:text="欧时纳（JUST STAR）女士包包时尚简约单肩斜挎包韩版百搭手提凯莉包 可爱猫咪挂饰 043萌趣蓝"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="〉"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/lines"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/color1"
                android:layout_below="@id/rlOne"
                />
            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/viewOne"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/point_three"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/tvPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="@color/color1"
                android:layout_below="@+id/rlTwo"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewTwo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/color1"
                android:id="@+id/viewThree"
                android:layout_below="@id/rvOne"/>
            <RelativeLayout
                android:id="@+id/rlThree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/viewThree"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品金额"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvMoney0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="¥215.90"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/color1"
                android:id="@+id/viewFour"
                android:layout_below="@id/rlThree"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rlFour"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="¥215.90"
            android:textColor="@color/red"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btPay"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/red"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color1"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:background="@color/color4"
        android:textColor="@color/orange"
        android:text="欧时纳（JUST STAR）女士包包时尚简约单肩斜挎包韩版百搭手提凯莉包 可爱猫咪挂饰 043萌趣蓝"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="invisible"
        />
</RelativeLayout>
